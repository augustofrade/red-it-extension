{
  "manifest_version": 2,
  "name": "Red-It",
  "version": "0.6.3",
  "author": "Augusto Frade",
  "homepage_url": "https://github.com/augustofrade/red-it-extension",
  "developer": {
    "name": "Augusto Frade",
    "url": "https://github.com/augustofrade"
  },

  "icons": {
    "32": "icons/icon.png",
    "64": "icons/icon@2x.png"
  },

  "description": "Red-It is a Firefox extension designed to enhance your Reddit browsing experience by allowing you to block unwanted posts based on keywords. Take control of your Reddit feed and filter out posts that contain specific words, phrases and simple patterns you'd rather not see.",

  "content_scripts": [
    {
      "matches": ["*://old.reddit.com/*"],
      "js": ["content-scripts/content-handler.js", "content-scripts/old-reddit.js"],
      "css": ["content-scripts/injected-styles.css"]
    },
    {
      "matches": ["*://www.reddit.com/*"],
      "js": [
        "content-scripts/content-handler.js",
        "content-scripts/new-reddit-handlers.js",
        "content-scripts/new-reddit.js"
      ],
      "css": ["content-scripts/injected-styles.css"]
    }
  ],

  "options_ui": {
    "page": "pages/settings.html",
    "open_in_tab": false
  },

  "permissions": ["tabs", "storage", "webRequest", "webRequestBlocking", "*://*.reddit.com/*"],

  "browser_action": {
    "default_title": "Red-It",
    "default_popup": "popup/popup.html"
  },

  "background": {
    "scripts": ["background-scripts/background.js", "background-scripts/subreddit-blocker.js"]
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "@red-it"
    }
  },

  "web_accessible_resources": ["pages/blocked-subreddit.html"]
}
